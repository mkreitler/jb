<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
  xmlns:gap="http://phonegap.com/ns/1.0"
  id="com.freegamersjournal.dungeonopolyTest"
  version= "1.0.0">

  <name>CraftyJs starmelt tutorial</name>
  <description>CraftyJs Game</description>

  <author href="https://github.com/mkreitler"
    email="mkreitler@hotmail.com">
    Tim Kim
  </author>
  
  <preference name="phonegap-version" value="cli-6.3.0" />

  <gap:platforms>
    <gap:platform name="android" minVersion="2.1" />
    <gap:platform name="webos" />
    <gap:platform name="symbian.wrt" />
    <gap:platform name="blackberry" project="widgets"/>
  </gap:platforms>

  <icon src="icon.png" gap:role="default" />

  <!-- SET TO PORTRAIT -->

  <preference name="orientation" value="landscape" />

</widget>
